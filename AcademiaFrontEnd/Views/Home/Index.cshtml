@{
    ViewData["Title"] = "Home Page";
}

<div class="min-h-screen bg-gray-100 font-sans ">
    <header class="relative h-screen bg-cover  bg-mobile mt-20" style="background-image: url('@Url.Content("~/imgs/banner-concentrado.jpg")');">
        <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
        </div>
    </header>





    <section id="about" class="">
        <div class="bg-white">
            <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-1 lg:grid-cols-2  items-center min-h-[600px] ">
                <!-- Altura mínima para consistência -->
                <!-- Texto -->
                <div class="p-10 ">
                    <h2 class="text-4xl font-extrabold text-gray-900 mb-12 text-center">Transforme Seu Corpo com Nossos Treinos!</h2>
                    <p class="text-2xl text-gray-900 leading-relaxed mb-6 text-center mx-auto max-w-[600px]">
                        Com nosso treino de hipertrofia, você vai além dos limites, ganhando
                        força, definição e um físico de tirar o fôlego. Séries personalizadas,
                        cargas progressivas e o suporte que você precisa para alcançar
                        resultados reais. Seu próximo nível começa aqui!
                    </p>
                    <div class="flex justify-center">
                        <!-- Centraliza o botão -->
                    </div>
                </div>
                <!-- Imagem -->
                <div class="flex justify-center items-center h-full ">
                    <img src="~/imgs/about1.jpg" alt="About Us" class="w-full max-h-full h-full object-cover shadow-lg">
                </div>
            </div>
        </div>
    </section>

    <section id="about2" class="">
        <div class="bg-white">
            <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-1 lg:grid-cols-2 items-center min-h-[600px] ">
                <!-- Altura mínima para consistência -->
                <!-- Imagem -->
                <div class="flex order-2 justify-center items-center h-full sm:order-2 md:order-2 lg:order-1">
                    <img src="~/imgs/hipertrofia3.jpg" alt="About Us" class="w-full max-h-full h-full object-cover shadow-lg">
                </div>
                <!-- Texto -->
                <div class="p-10 order-1 md:p-0 sm:order-1 md:order-1 lg:order-1 md:p-10">
                    <h2 class="text-4xl font-extrabold text-gray-900 mb-12 text-center">Nossa Plataforma conta com diversos Treinos!</h2>
                    <p class="text-2xl text-gray-900 leading-relaxed mb-6 text-center mx-auto max-w-[600px]">
                        Com nossos treinos personalizados, criamos planos sob medida que
                        atendem às suas metas, seja emagrecimento, ganho de massa muscular,
                        definição ou condicionamento físico.
                    </p>
                    <div class="flex justify-center">
                        <!-- Centraliza o botão -->
                        <a  class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 transition-all" asp-action="login">Começar</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>